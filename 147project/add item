						<?php
							include("config.php");
							$query = "SELECT * FROM clothing";
							$result = mysql_query($query);
							while ($row = mysql_fetch_assoc($result)) {
								
								echo "<li><a href='#'>";
								echo "<img src=".$row["image"]." />";
								echo "<h3>".$row["ClothingType"]." - ".$row["Color"]."</h3>";
								echo "<p>".$row["Store"]." - ".$row["Style"]."</p>";
